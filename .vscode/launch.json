{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "teeclip",
            "type": "debugpy",
            "request": "launch",
            "module": "teeclip",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": "${input:teeclipArgs}"
        },
        {
            "name": "pytest: All tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": ["tests/", "-v", "-s"]
        },
        {
            "name": "pytest: Current file",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": ["${file}", "-v", "-s"]
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ],
    "inputs": [
        {
            "id": "teeclipArgs",
            "type": "promptString",
            "description": "teeclip args (e.g. --paste, --paste --backend windows, -nc)",
            "default": ""
        }
    ]
}
